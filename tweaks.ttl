<http://uml.linkedmodels.org/sg/schema/fsgim/queries#ExternalClassQueries>
  spin:query [
      a sp:Select ;
      sp:orderBy (
          [
            sp:varName "typeLabel" ;
          ]
        ) ;
      sp:resultVariables (
          [
            sp:varName "entity" ;
          ]
          [
            sp:varName "typeLabel" ;
          ]
        ) ;
      sp:where (
          [
            a sp:TriplePath ;
            sp:object owl:Thing ;
            sp:path [
                a sp:SeqPath ;
                sp:path1 rdf:type ;
                sp:path2 [
                    a sp:ModPath ;
                    sp:modMax -2 ;
                    sp:modMin 0 ;
                    sp:subPath rdfs:subClassOf ;
                  ] ;
              ] ;
            sp:subject [
                sp:varName "entity" ;
              ] ;
          ]
          [
            sp:object [
                sp:varName "type" ;
              ] ;
            sp:predicate rdf:type ;
            sp:subject [
                sp:varName "entity" ;
              ] ;
          ]
          [
            sp:object [
                sp:varName "typeLabel" ;
              ] ;
            sp:predicate rdfs:label ;
            sp:subject [
                sp:varName "type" ;
              ] ;
          ]
          [
            a sp:Filter ;
            sp:expression [
                a sp:not ;
                sp:arg1 [
                    a swa:isImportedResource ;
                    sp:arg1 [
                        sp:varName "entity" ;
                      ] ;
                  ] ;
              ] ;
          ]
        ) ;
      rdfs:comment "List all instances of FSGIM entities" ;
    ] ;
